<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Atomic+Age" />

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'AlphaBlog', root_path, class: 'navbar-brand', id: 'logo' %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to 'Users', users_path %></li>
        <li><%= link_to 'Archives', declarations_path %></li>
        <li><%= link_to 'Market', '#' %></li>
      </ul>
      <form class="navbar-form navbar-left">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Type in me!">
        </div>
        <button type="submit" class="btn btn-default btn-search">Submit</button>
      </form>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
        <li><%= link_to 'Logout', logout_path, method: :delete %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
             aria-haspopup="true" aria-expanded="false">
            <%= gravatar_for current_user, 20 %>
            <%= 'Admin' if current_user.admin? %>
            <%= current_user.username %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Create new declaration', new_declaration_path %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to 'Edit profile', edit_user_path(current_user) %></li>
          </ul>
        <% else %>
            <li><%= link_to 'Login', login_path%></li>
            <li><%= link_to 'Join us', signup_path %></li>
        <% end %>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>