<h1 class="col-xs-offset-2">Sign in for a great time</h1>

<%= form_for(:session, html: {class: 'form-horizontal', role: 'form'}, url: login_path) do |f| %>

    <div class="form-group">
      <div class="control-label col-xs-2">
        <%= f.label :email %>
      </div>
      <div class="col-sm-6">
        <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email', autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-xs-2">
        <%= f.label :password %>
      </div>
      <div class="col-sm-6">
        <%= f.password_field :password, rows: 9, class: 'form-control',
                             placeholder: 'Enter password', autocomplete: 'off' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Login', class: 'btn btn-primary btn-md' %>
      </div>
    </div>

    <div class="col-xs-4 col-sm-offset-2">
      [ <%= link_to 'Cancel', articles_path %> ]
    </div>

<% end %>