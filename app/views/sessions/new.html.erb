<h1 class="col-xs-offset-2">Sign in for a great time</h1>

<%= form_for(:session, html: {class: 'form-horizontal', role: 'form'}, url: login_path) do |f| %>

    <div class="form-group">
      <div class="control-label col-xs-2 title">
        <%= f.label :email %>
      </div>
      <div class="col-sm-6">
        <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email', autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-xs-2 title">
        <%= f.label :password %>
      </div>
      <div class="col-sm-6">
        <%= f.password_field :password, rows: 9, class: 'form-control',
                             placeholder: 'Enter password', autocomplete: 'off' %>
      </div>
    </div>

    <btn-row>
      <ul class="col-sm-offset-2 col-sm-10">
        <li>
          <%= f.submit 'Login', class: 'btn btn-primary btn-md' %>
        </li>

        <li>
          [ <%= link_to 'Cancel', :back %> ]
        </li>
      </ul>
    </btn-row>

<% end %>