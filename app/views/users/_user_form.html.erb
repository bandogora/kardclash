<%= render 'shared/error', obj: @user %>

<div class="row">
  <div class="col-xs-12">

    <%= form_for(@user, html: {class: 'form-horizontal', role: 'form'}) do |f| %>

        <div class="form-group">
          <div class="control-label col-xs-2 title">
            <%= f.label :username %>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :username, class: 'form-control', placeholder: 'Enter Username', autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-xs-2 title">
            <%= f.label :email %>
          </div>
          <div class="col-sm-6">
            <%= f.email_field :email, class: 'form-control', placeholder: 'Enter Email' %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-xs-2 title">
            <%= f.label :password %>
          </div>
          <div class="col-sm-6">
            <%= f.password_field :password, class: 'form-control', placeholder: 'Enter Password' %>
          </div>
        </div>

        <btn-row>
          <ul class="col-sm-offset-2 col-sm-10">
            <li>
              <%= f.submit(@user.new_record? ? 'Sign up' : 'Save changes', class: 'btn btn-primary btn-md') %>
            </li>

            <li>
              [ <%= link_to 'Cancel', :back %> ]
            </li>
          </ul>
        </btn-row>

        <% if @user.new_record? %>
        <span class="col-sm-offset-1 col-sm-10 small title">
          Already have an account? <%= link_to 'Login', login_path %>
        </span>
        <% end %>

    <% end %>
  </div>
</div>