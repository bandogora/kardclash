<h2 class="col-xs-offset-2 title"><%= @article.title %></h2>

<div class="well col-xs-6 col-xs-offset-2">
  <% if @article.user %>
    <ul class="listing">
      <div class="row center">
        <div class="col-md-4 col-md-offset-4">
          <li>Created by</li>
          <li><%= link_to gravatar_for(@article.user, 80), user_path(@article.user) %></li>
          <li class="article-title">
            <%= link_to @article.user.username, user_path(@article.user) %>
          </li>
          <li><small><%= pluralize(@article.user.articles.count, 'post') if @article.user.articles %>
          </small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <hr>
  <%= simple_format(@article.description) %>

  <div class="article-actions">
    <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
    <%= link_to 'Edit post', edit_article_path(@article), class: 'btn btn-xs btn-primary' %>
    <% end %>
    <%= link_to 'Back to posts', articles_path, class: 'btn btn-xs btn-primary' %>
    <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
    | [ <%= link_to 'Delete', article_path(@article), method: :delete %> ]
    <% end %>
  </div>
</div>